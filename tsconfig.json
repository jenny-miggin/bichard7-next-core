{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "sourceMap": true,
    "outDir": "build",
    "types": [
      "node",
      "jest"
    ],
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*.ts", "tests/**/*.ts"
  ]
}
